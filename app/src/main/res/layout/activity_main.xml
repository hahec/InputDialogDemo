<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bind"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="19dp"
            android:text="绑定后可实时接收孩子的作业情况"
            android:textSize="15sp"
            android:textColor="#333333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:text="注：如不清楚孩子的账号和密码，请与孩子沟通获取"
            android:textSize="13sp"
            android:textColor="#999999"
            />


        <RelativeLayout
            android:id="@+id/rl_acc"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="19dp"
            >


            <ImageView
                android:id="@+id/iv_del_acc_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_touch_app_black_24dp"
                android:layout_marginRight="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

            <EditText
                android:id="@+id/et_stu_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_del_acc_input"
                android:paddingLeft="19dp"
                android:hint="请输入孩子的手机号/翼课号"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="#c1c1c1"
                android:imeOptions="actionDone"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_psw"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="19dp"
            >

            <CheckBox
                android:id="@+id/cb_psw_visibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/ic_touch_app_black_24dp"
                />



            <ImageView
                android:id="@+id/iv_del_psw_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_touch_app_black_24dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/cb_psw_visibility"
                />

            <EditText
                android:id="@+id/et_stu_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="19dp"
                android:layout_toLeftOf="@id/iv_del_psw_input"
                android:layout_centerVertical="true"
                android:hint="请输入孩子的密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColorHint="#c1c1c1"
                android:imeOptions="actionDone"

                />

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>